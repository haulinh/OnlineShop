@model IEnumerable<Model.ViewModel.UserViewModel>

@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section jsFooter
    {

    <script src="assets/admin/js/pages/crud/datatables/extensions/buttons.js" type="text/javascript"></script>
    <script src="~/assets/admin/js/Controllers/accounts.js"></script>
}

<!-- begin:: Content -->
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
 
    <div class="kt-portlet">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Quản lý tài khoản
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">


                    <div class="dropdown dropdown-inline">
                        @*<button type="button" class="btn btn-brand btn-icon-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="flaticon2-plus"></i> Add New
                            </button>*@

                        @Html.ActionLink("Thêm tài khoản", "Create", "Account", null, new { @class = "flaticon2-plus btn btn-brand btn-icon-sm" })


                    </div>
                </div>
            </div>
        </div>


        <div class="kt-portlet__body">
            @using (Html.BeginForm("Index", "Account", FormMethod.Get, new { @class = "kt-form kt-form--fit kt-margin-b-20" }))
            {

                <!--begin: Search Form -->

                <div class="row kt-margin-b-20">
                    <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
                        <label>Tên đăng nhập:</label>
                        <input value="@ViewBag.UserName" name="userName" type="text" class="form-control kt-input" placeholder="Nhận tên đăng nhập" data-col-index="0">
                    </div>
                    <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
                        <label>Họ tên:</label>
                        <input value="@ViewBag.Name" name="name" type="text" class="form-control kt-input" placeholder="Nhập họ tên" data-col-index="1">
                    </div>

                    <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
                        <label>Số điện thoại:</label>
                        <input value="@ViewBag.SDT"  name="sdt" type="text" class="form-control kt-input" placeholder="E.g: 37000-300" data-col-index="1">
                    </div>
                    <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
                        <label>Email:</label>
                        <input value="@ViewBag.email" name="email" type="email" class="form-control kt-input" placeholder="E.g: 37000-300" data-col-index="1">
                    </div>
                    @*<div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
                            <label>Agent:</label>
                            <input type="text" class="form-control kt-input" placeholder="Agent ID or name" data-col-index="4">
                        </div>*@
                </div>
                <div class="row kt-margin-b-20">
                    <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
                        <label>Ngày tạo:</label>
                        <div class="input-daterange input-group" id="kt_datepicker">
                            <input type="date" class="form-control kt-input" name="start" placeholder="From" data-col-index="5" />
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="la la-ellipsis-h"></i></span>
                            </div>
                            <input type="date" class="form-control kt-input" name="end" placeholder="To" data-col-index="5" />
                        </div>
                    </div>
                    <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
                        <label>Trạng thái:</label>
                        @Html.DropDownList("status", (SelectList)ViewBag.Status, "--Chọn trạng thái--", htmlAttributes: new { @class = "form-control kt-input" })
                        @*<select class="form-control kt-input" data-col-index="6">
                                <option value="">Select</option>
                            </select>*@
                    </div>
                    <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
                        <label>Type:</label>
                        @Html.DropDownList("userGroup", new SelectList(ViewBag.UserGroups, "ID", "Name  "), "--Chọn nhóm --", htmlAttributes: new { @class = "form-control kt-input" })
                        @*<select class="form-control kt-input" data-col-index="7">
                                <option value="">Select</option>
                            </select>*@
                    </div>
                </div>
                <div class="kt-separator kt-separator--md kt-separator--dashed"></div>
                <div class="row">
                    <div class="col-lg-12">
                        <button class="btn btn-primary btn-brand--icon" id="kt_search">
                            <span>
                                <i class="la la-search"></i>
                                <span>Search</span>
                            </span>
                        </button>
                        &nbsp;&nbsp;
                        <a href="Admin/Account/Index" class="btn btn-secondary btn-secondary--icon">
                            <i class="la la-close"></i>
                            <span>Reset</span>
                        </a>


                    </div>
                </div>
            }

            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên đăng nhập</th>
                        <th>Mật khẩu</th>
                        <th>Họ tên</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>1</td>
                            <td>@item.user.UserName</td>
                            <td>@item.user.Password </td>
                            <td>@item.user.Name</td>
                            <td>@item.user.Phone</td>
                            <td>@item.user.Email</td>

                            @if (item.user.Status)
                            {
                                <td>
                                    <span class="kt-badge kt-badge--brand kt-badge--inline kt-badge--pill">Kích hoạt</span>

                                </td>
                            }
                            else
                            {
                                <td>
                                    <span class="kt-badge kt-badge--danger kt-badge--inline kt-badge--pill">Đã khóa</span>

                                </td>
                            }

                            <td>
                                @if (item.userGroup != null)
                                {
                                    @item.userGroup.Name
                                }
                            </td>
                            <td>
                                <a href="/Admin/Account/ViewDetail/@item.user.ID" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Xem chi tiết">
                                    <i class="la la-eye"></i>
                                </a>


                                <a href="/Admin/Account/Edit/@item.user.ID" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Chỉnh sửa">
                                    <i class="la la-edit"></i>
                                </a>

                                <a title="Kích hoạt" data-id="@item.user.ID" class="btn-active btn btn-sm btn-clean btn-icon btn-icon-md">
                                    <i class="la la-check"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>STT</th>
                        <th>Tên đăng nhập</th>
                        <th>Mật khẩu</th>
                        <th>Họ tên</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Type</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>

            <!--end: Datatable -->
        </div>
    </div>

</div>

<!-- end:: Content -->